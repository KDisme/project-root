
<%- include('../layout') %>
<div class="container mt-4">
	<h2 class="mb-4">Quản lý nhà cung cấp</h2>
	<a href="/suppliers/create" class="btn btn-success mb-3">Thêm nhà cung cấp</a>
	<table class="table table-bordered table-hover">
		<thead class="table-light">
			<tr>
				<th>Tên</th>
				<th>Địa chỉ</th>
				<th>Số điện thoại</th>
				<th>Thao tác</th>
			</tr>
		</thead>
		<tbody>
			<% suppliers.forEach(s => { %>
				<tr>
					<td><%= s.name %></td>
					<td><%= s.address %></td>
					<td><%= s.phone %></td>
					<td>
						<a href="/suppliers/<%= s._id %>/edit" class="btn btn-warning btn-sm">Sửa</a>
						<form method="post" action="/suppliers/<%= s._id %>/delete" style="display:inline-block" onsubmit="return confirm('Xác nhận xóa?');">
							<button type="submit" class="btn btn-danger btn-sm">Xóa</button>
						</form>
					</td>
				</tr>
			<% }) %>
		</tbody>
	</table>
</div>

