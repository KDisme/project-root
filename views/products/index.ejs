
<%- include('../layout') %>
<div class="container mt-4">
	<h2 class="mb-4">Quản lý sản phẩm</h2>
	<a href="/products/create" class="btn btn-success mb-3">Thêm sản phẩm</a>
	<table class="table table-bordered table-hover">
		<thead class="table-light">
			<tr>
				<th>Tên sản phẩm</th>
				<th>Giá</th>
				<th>Số lượng</th>
				<th>Nhà cung cấp</th>
				<th>Thao tác</th>
			</tr>
		</thead>
		<tbody>
			<% products.forEach(p => { %>
				<tr>
					<td><%= p.name %></td>
					<td><%= p.price %></td>
					<td><%= p.quantity %></td>
					<td><%= p.supplier ? p.supplier.name : '' %></td>
					<td>
						<a href="/products/<%= p._id %>/edit" class="btn btn-warning btn-sm">Sửa</a>
						<form method="post" action="/products/<%= p._id %>/delete" style="display:inline-block" onsubmit="return confirm('Xác nhận xóa?');">
							<button type="submit" class="btn btn-danger btn-sm">Xóa</button>
						</form>
					</td>
				</tr>
			<% }) %>
		</tbody>
	</table>
</div>

